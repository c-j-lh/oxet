<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/language_iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/language_tv_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/language_iv_icon"
        app:layout_constraintStart_toStartOf="@+id/language_iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/language_iv_icon" />

    <ProgressBar
        android:id="@+id/language_bar_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/language_tv_lesson"
        app:layout_constraintStart_toStartOf="@+id/language_tv_lesson"
        app:layout_constraintTop_toBottomOf="@+id/language_tv_lesson" />

</android.support.constraint.ConstraintLayout>